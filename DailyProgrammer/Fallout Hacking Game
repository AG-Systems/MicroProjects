#include <iostream>
#include <string>
#include <vector>
#include <stdlib.h>
#include <time.h>
using std::vector;


std::string input;
std::string hack;
vector<std::string> veryeasy = { "apple", "banana", "orange", "strawberry" }; 
vector<std::string> easy = { "apple", "banana", "orange", "strawberry" }; 
vector<std::string> average = { "apple", "banana", "orange", "strawberry" }; 
vector<std::string> hard = { "apple", "banana", "orange", "strawberry" }; 
vector<std::string> veryhard = { "apple", "banana", "orange", "strawberry" }; 

int main()
{
    srand ( time(NULL) );
    std::cout << "Welcome to fallout hacking game. " << "\n" << "Please input what difficulty you want to choose: Very easy, easy, average, hard, and very hard. " << std::endl;
    std::cin >> input;
    
    if (input == "very easy")
    {
        std::cout << "You have choose very easy mode " << std::endl;
        for (vector<std::string>::const_iterator i = veryeasy.begin(); i != veryeasy.end(); ++i)
        std::cout << *i << ' ';
        int randomIndex = rand() % veryeasy.size();
        for(int e = 0; e < 1;)
        {
            randomIndex = rand() % veryeasy.size();
            std::string password = veryeasy[randomIndex];
            std::cout << "Please input a password " << std::endl;
            std::cin >> hack;
            if (hack == password )
            {
                std::cout << "Congrats you got the password " << std::endl;
                e = 1;
            }
            else 
            {
                hack.compare(password)
                e--;
                
            }
        }
    }
    else if (input == "easy")
    {
        std::cout << "You have choose easy" << std::endl;
        for (vector<std::string>::const_iterator i = easy.begin(); i != easy.end(); ++i)
        std::cout << *i << ' ';
        for(int e = 0; e < 1;)
        {
                       
        }
    }
    else if (input == "average")
    {
        std::cout << "You have choose average" << std::endl;
    }
    else if (input == "hard")
    {
        std::cout << "You have choose hard" << std::endl;
    }
    
    else 
    {
        std::cout << "You have choose very hard" << std::endl;        
    }
    
    
}
